@model Emp.Web.Models.Employee;
@{
    ViewData["Title"] = "Add Employee";
}

<h2>New Employee</h2>

<script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

<link href="~/Content/SweetAlert/sweetalert.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>


<script type="text/javascript">
    @if(TempData["Add"] != null)
    {
        <text>
            $(document).ready(function()
                {
                swal("Message","@TempData["Add"]","success");
                });
          </text>
    }
</script>

<form class="form-horizontal" asp-controller="Employee" asp-action="AddEmployee" method="post">
    @* Validation Summary *@
    <div asp-validation-summary="All" class="text-danger"></div>

    @* Label, Input, Validation(span) *@
    <div class="form-group">
        <label asp-for="FirstName" class="control-label col-md-2">First Name : </label>
        <div class="col-md-10">
            <input asp-for="FirstName" type="text" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="MiddleName" class="control-label col-md-2">Middle Name : </label>
        <div class="col-md-10">
            <input asp-for="MiddleName" type="text" class="form-control" />
            <span asp-validation-for="MiddleName" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <label asp-for="LastName" class="control-label col-md-2">Last Name : </label>
        <div class="col-md-10">
            <input asp-for="LastName" type="text" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="DateOfBirth" class="control-label col-md-2">Date Of Birth : </label>
        <div class="col-md-10">
            <input asp-for="DateOfBirth" type="date" class="form-control" />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="CountryCode" class="control-label col-md-2">Country Code : </label>
        <div class="col-md-10">
            <input asp-for="CountryCode" class="form-control" />
            <span asp-validation-for="CountryCode" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ContactNo" class="control-label col-md-2">Contact No. : </label>
        <div class="col-md-10">
            <input class="form-control" asp-for="ContactNo">
            <span asp-validation-for="ContactNo" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="EmailId" class="control-label col-md-2">Email ID : </label>
        <div class="col-md-10">
            <input class="form-control" asp-for="EmailId" type="email">
            <span asp-validation-for="EmailId" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="HighestQualification" class="control-label col-md-2">Highest Qualification : </label>
        <div class="col-md-10">
            <input asp-for="HighestQualification" class="form-control" />
            <span asp-validation-for="HighestQualification" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="TypeOfEmployee" class="control-label col-md-2">Type of Employee : </label>
        <div class="col-md-10">
            <select asp-for="TypeOfEmployee" class="form-control">
                <option value="" selected disabled>Please Select Type of Employee..</option>
                <option value="Part-Time">Part-Time</option>
                <option value="Full-Time">Full-Time</option>
            </select>
            <span asp-validation-for="TypeOfEmployee" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Gender" class="control-label col-md-2">Gender : </label>
        <div class="col-md-10">
            <select asp-for="Gender" class="form-control">
                <option value="" selected disabled>Please Select Gender..</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="StartDate" class="control-label col-md-2">Start Date : </label>
        <div class="col-md-10">
            <input asp-for="StartDate" type="date" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="EndDate" class="control-label col-md-2">End Date : </label>
        <div class="col-md-10">
            <input asp-for="EndDate" type="date" class="form-control" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Submit Details</button>
        </div>
    </div>

</form>

